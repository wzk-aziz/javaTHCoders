         <image>
            <Image url="@../../../adc1d6fa7ba487608279606fee8b9b2b.jpg" />
         </image>
      </ImageView>
      <Label fx:id="InvalidPhoneNumber" layoutX="332.0" layoutY="192.0" prefHeight="15.0" prefWidth="150.0" textFill="RED">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
      <ImageView fitHeight="539.0" fitWidth="275.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/sweden-change-replace-car.jpg" />
         </image>
      </ImageView>
      <VBox layoutX="296.0" layoutY="80.0" prefHeight="296.0" prefWidth="290.0" style="-fx-background-color: #ED5A5B;">
